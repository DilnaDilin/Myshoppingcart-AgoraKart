<div class="container-fluid">
  <div class="row">
    <div
      class="intro-content-wrapper"
      style="background-image:url(/images/common-images/back.png) "
    >
      <h1 class="intro-title text-white">Admin, Welcome to AgoraKart ! </h1>

    </div>
    <div
      class="col-sm-6 col-md-7 intro-section"
      style="background-image:url(/images/common-images/back.png);min-height:250px; "
    >
      <div class="brand-wrapper p-5 m-5">

        <img
          src="/images/common-images/icon.jpg"
          class="img-fluid border border-4 rounded-circle"
          alt="..."
          style="width:300px;height:150px"
        />
      </div>

    </div>
    <div class="col-sm-6 col-md-5 form-section">
      <div class="login-wrapper">
        {{#if error.status}}
          <h2 style="color:red;font-style: italic">{{error.value}}</h2>
        {{/if}}
        <h2 class="login-title">Sign in</h2>
        <form action="/admin/view-products" method="POST" id="adminlogin">
          <div class="form-group">
            <label for="email" class="sr-only">Username</label>
            <input
              type="text"
              name="username"
              id="username"
              class="form-control"
              placeholder="Username"
            />
          </div>
          <div class="form-group mb-3">
            <label for="password" class="sr-only">Password</label>
            <input
              type="password"
              name="password"
              id="password"
              class="form-control"
              placeholder="Password"
            />
          </div>

          <div class="d-flex justify-content-between align-items-center mb-5">
            <input
              type="submit"
              value="Login"
              name=""
              id=""
              class="btn btn-primary"
            />

          </div>
        </form>

      </div>
    </div>
  </div>

</div>