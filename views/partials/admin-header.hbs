<header>
  <div class="row">
    <div class="col-xs-12">
      <div class="row position:fixed">

        <nav
          class="navbar navbar-expand-lg bg-gradient text-white border-4"
          style="background:#A52A2A"
        >
          <div class="container-fluid">
            <div class="col-md-1">
              <img
                src="/images/common-images/icon.jpg"
                class="img-fluid border border-4 rounded-circle"
                alt="..."
                style="width:120px;height:50px;white-space: nowrap"
              />
            </div>
            <div class="col-md-3 pl-0">
              <h3 style="white-space: nowrap">AgoraKart Admin Panel</h3>
            </div>

            <div
              class="col-md-8 text-white d-flex align-items-end flex-column mb-3"
            >

              <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation"
              >
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">

                <ul class="navbar-nav">
                  <li class="nav-item">
                    <a
                      class="nav-link active text-white"
                      aria-current="page"
                      href="/admin/view-products"
                    >All products</a>
                  </li>
                  <li class="nav-item">
                    <a
                      class="nav-link active text-white"
                      aria-current="page"
                      href="/admin/add-products"
                    >Add products</a>
                  </li>
                  <li class="nav-item">
                    <a
                      class="nav-link active text-white"
                      aria-current="page"
                      href="#"
                    >All users</a>
                  </li>
                  <li class="nav-item">
                    <a
                      class="nav-link active text-white"
                      aria-current="page"
                      href="#"
                    >All Orders</a>
                  </li>
                  <div class="dropdown">
                    <button
                      class="btn btn-danger bg-gradient dropdown-toggle"
                      type="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      {{#if user}}
                        {{user.username}}
                      {{else}}
                        Account
                      {{/if}}
                    </button>
                    <ul class="dropdown-menu">
                      {{#if user}}
                        <li><a
                            class="dropdown-item"
                            href="/admin/logout"
                          >Logout</a></li>
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                      {{else}}
                        <li><a
                            class="dropdown-item"
                            href="/admin"
                          >Login</a></li>
                      {{/if}}

                    </ul>
                  </div>

                </ul>

              </div>
            </div>
          </div>
        </nav>

      </div>

    </div>
  </div>
</header>